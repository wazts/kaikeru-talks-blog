{{!< default}}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{#post}}

        <header>
        <h1 class="post-title">{{{title}}}</h1>
        </header>

        <section class="post-content">
            {{content}}
        </section>

        {{> share}}

        <footer class="post-footer">
            {{> author-description}}
        </footer>

        {{/post}}

        {{!> comments-disqus}}
        {{!> comments-facebook}}
        {{!> comments-google-plus}}

    </article>

</main>
